<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pres.yao.yaogame.client.view.MineFragment">

    <pres.yao.yaogame.client.utils.PersonalItemView
        android:id="@+id/mine_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:icon="@drawable/ic_vector_user"
        app:more="@drawable/ic_vector_left_orange"
        app:layout_constraintTop_toTopOf="parent"
        app:name="用户名"
        app:show_line="true"
        app:show_more="true"
        tools:layout_editor_absoluteX="0dp" />

    <pres.yao.yaogame.client.utils.PersonalItemView
        android:id="@+id/mine_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_vector_email"
        app:layout_constraintBottom_toBottomOf="@id/mine_subscription"
        app:layout_constraintTop_toBottomOf="@+id/mine_username"
        app:layout_constraintVertical_bias="0"
        app:name="邮箱"
        app:show_line="true"
        app:show_more="true"
        app:more="@drawable/ic_vector_left_orange"
        tools:layout_editor_absoluteX="0dp" />

    <pres.yao.yaogame.client.utils.PersonalItemView
        android:id="@+id/mine_subscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_vector_timelist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mine_email"
        app:layout_constraintVertical_bias="0"
        app:name="我的订阅"
        app:show_line="true"
        app:show_more="true"
        app:more="@drawable/ic_vector_right"
        tools:layout_editor_absoluteX="0dp" />

    <pres.yao.yaogame.client.utils.PersonalItemView
        android:id="@+id/mine_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:icon="@drawable/ic_vector_password"
        app:layout_constraintTop_toBottomOf="@+id/mine_subscription"
        app:name="修改密码"
        app:show_line="true"
        app:show_more="true"
        app:more="@drawable/ic_vector_right"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/mine_loginOrOut"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:background="#F44336"
        android:text="@string/login"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mine_password" />

</androidx.constraintlayout.widget.ConstraintLayout>